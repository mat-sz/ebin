{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "outDir": "./lib",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "types": ["vitest/globals"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
